<a href="/" class="btn btn-outline-warning">Table of contents</a>

<hr>
<%# The below code creates an array of 10 random names %>
<%= names = Array.new(10) { Faker::Name.unique.name  } %>

<hr>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="list-group">
        <% names.each do |name| %>
          <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-40">
            <%= name %>
            <span class="badge bg-warning rounded-pill">2</span>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
